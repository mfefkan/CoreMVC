@model List<Category>

	<table class="table table-hover">

		<tr>

			<th>Isim</th>
			<th>Aciklama</th>
			<th>Islemler</th>

		</tr>

	  @foreach (Category item in Model)
	 {
		<tr>
			<td>@item.CategoryName</td>
			<td>@item.Description</td>
			<td>
				<a asp-action="UpdateCategory" asp-controller="Category" asp-route-id="@item.ID" class="btn btn-warning">Güncelle</a>
			</td>

			<td>

				<a asp-action="DeleteCategory" asp-controller="Category" asp-route-id="@item.ID" class="btn btn-danger">Sil</a>

			</td>

		</tr>
	 }

	</table>